{
  "name": "gapminder-offline",
  "version": "0.70.0",
  "description": "Gapminder offline tool",
  "main": "",
  "scripts": {
    "watch": "npm run watch:dev",
    "watch:dev": "webpack --watch --progress --profile --colors --display-error-details --display-cached",
    "build": "npm run build:dev",
    "build-win": "npm run build-win:dev",
    "vizabi-styles": "cp ./node_modules/vizabi/build/dist/vizabi.css ./src/app",
    "vizabi-cursors": "cp ./node_modules/vizabi/build/dist/assets/cursors/* ./src/app/assets/cursors",
    "vizabi-translation": "cp ./node_modules/vizabi/build/dist/assets/translation/* ./src/app/preview-data/translation && cp ./node_modules/vizabi/build/dist/assets/translation/* ./src/app/assets/translation",
    "build:dev": "npm run vizabi-styles && npm run vizabi-cursors && npm run vizabi-translation && webpack --progress --profile --colors --display-error-details --display-cached",
    "vizabi-styles-win": "copy .\\node_modules\\vizabi\\build\\dist\\vizabi.css .\\src\\app",
    "vizabi-cursors-win": "copy .\\node_modules\\vizabi\\build\\dist\\assets\\cursors\\* .\\src\\app\\assets\\cursors",
    "vizabi-translation-win": "copy .\\node_modules\\vizabi\\build\\dist\\assets\\translation\\* .\\src\\app\\preview-data\\translation && copy .\\node_modules\\vizabi\\build\\dist\\assets\\translation\\* .\\src\\app\\assets\\translation",
    "build-win:dev": "npm run vizabi-styles-win && npm run vizabi-cursors-win && npm run vizabi-translation-win && webpack --progress --profile --colors --display-error-details --display-cached",
    "package": "node package.js",
    "package-win": "npm run package -- --platform=win32 && copy update-win32.bat \"release\\Gapminder Offline-win32-x64\" && cd \"release\\Gapminder Offline-win32-x64\\resources\\app\" && npm i electron-easy-updater && npm i fs-extra",
    "package-lin": "npm run package -- --platform=linux && cp ./update-linux \"./release/Gapminder Offline-linux-x64\" && cd \"./release/Gapminder Offline-linux-x64/resources/app\" && npm i electron-easy-updater && npm i fs-extra",
    "package-mac": "npm run package -- --platform=darwin && cp ./init-macos-sierra \"./release/Gapminder Offline-darwin-x64\" && cp ./update-darwin \"./release/Gapminder Offline-darwin-x64\" && cd \"./release/Gapminder Offline-darwin-x64/Gapminder Offline.app/Contents/Resources/app\" && npm i electron-easy-updater && npm i fs-extra",
    "package-all": "npm run package-win && npm run package-lin && npm run package-mac",
    "typings-install": "typings install",
    "electron": "NODE_ENV=development electron src/app",
    "webpack-test": "webpack --config webpack.test.js --progress --profile --colors --display-error-details --display-cached",
    "test": "karma start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VS-work/gapminder-offline.git"
  },
  "author": "Vyacheslav Chub <vyacheslav.chub@valor-software.com>",
  "license": "GPL-3.0",
  "homepage": "",
  "dependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "@angular/forms": "2.0.0",
    "@angular/http": "2.0.0",
    "@angular/platform-browser": "2.0.0",
    "@angular/platform-browser-dynamic": "2.0.0",
    "@angular/platform-server": "2.0.0",
    "@angular/router": "3.0.0",
    "@types/core-js": "0.9.35",
    "@types/node": "6.0.52",
    "@types/redux": "3.6.0",
    "@types/zone.js": "0.0.27",
    "async": "2.1.2",
    "core-js": "2.4.1",
    "csv-parse": "1.1.7",
    "electron": "1.4.6",
    "format-json": "1.0.3",
    "lodash": "4.16.6",
    "ng2-bootstrap": "1.1.5",
    "ng2-vizabi": "0.18.2-14",
    "rxjs": "5.0.0-beta.12",
    "vizabi-ddfcsv-reader": "0.6.1",
    "webpack-target-electron-renderer": "0.4.0",
    "zone.js": "0.6.25"
  },
  "devDependencies": {
    "@types/webpack": "2.0.0",
    "awesome-typescript-loader": "2.2.4",
    "codelyzer": "1.0.0-beta.0",
    "electron-easy-updater": "0.2.6",
    "electron-packager": "8.2.0",
    "es6-promise-loader": "1.0.2",
    "es6-shim": "0.35.1",
    "es7-reflect-metadata": "1.6.0",
    "extract-text-webpack-plugin": "1.0.1",
    "imports-loader": "0.6.5",
    "istanbul-instrumenter-loader": "1.0.0",
    "jasmine-core": "2.5.2",
    "json-loader": "0.5.4",
    "karma": "1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.0.2",
    "karma-mocha-reporter": "2.2.0",
    "karma-phantomjs-launcher": "1.0.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "phantomjs-polyfill": "0.0.2",
    "phantomjs-prebuilt": "2.1.13",
    "raw-loader": "0.5.1",
    "redux": "3.6.0",
    "reflect-metadata": "0.1.8",
    "remap-istanbul": "0.7.0",
    "rimraf": "2.5.4",
    "source-map-loader": "0.1.5",
    "to-string-loader": "1.1.5",
    "ts-helpers": "1.1.2",
    "ts-loader": "1.1.0",
    "tslint": "3.15.1",
    "tslint-loader": "2.1.5",
    "typescript": "2.1.4",
    "typings": "2.0.0",
    "webpack": "1.13.3",
    "webpack-dev-server": "1.16.2"
  },
  "engines": {
    "node": ">= 4.2.1 <= 6",
    "npm": ">= 3"
  }
}
