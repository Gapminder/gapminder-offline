{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "gapminder-offline": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "preserveSymlinks": true,
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "assets": [
              "src/app-icon.ico",
              "src/app-icon.png",
              "src/app-icon.icns",
              "src/assets/i18n",
              "src/assets/images",
              "src/assets/logo.gif",
              "src/lib/svg-crowbar.js"
            ],
            "styles": [
              "src/bootstrap.scss",
              "src/gapminder-tools.scss",
              "src/header.scss",
              "node_modules/@vizabi/shared-components/build/VizabiSharedComponents.css",
              "node_modules/@vizabi/bubblechart/build/bubblechart.css",
              "node_modules/@vizabi/barrank/build/barrank.css",
              "node_modules/@vizabi/bubblemap/build/bubblemap.css",
              "node_modules/@vizabi/linechart/build/linechart.css",
              "node_modules/@vizabi/mountainchart/build/mountainchart.css"
            ],
            "scripts": [
              "node_modules/mobx/lib/mobx.umd.js",
              "node_modules/d3/dist/d3.js",
              "node_modules/@vizabi/core/dist/Vizabi.js",
              "node_modules/@vizabi/shared-components/build/VizabiSharedComponents.js",
              "node_modules/@vizabi/bubblechart/build/bubblechart.js",
              "node_modules/@vizabi/barrank/build/barrank.js",
              "node_modules/@vizabi/bubblemap/build/bubblemap.js",
              "node_modules/@vizabi/linechart/build/linechart.js",
              "node_modules/@vizabi/mountainchart/build/mountainchart.js"
            ],
            "customWebpackConfig": {
              "path": "./angular.webpack.js"
            }
          },
          "configurations": {
            "dev": {
              "optimization": false,
              "outputHashing": "all",
              "sourceMap": true,
              "namedChunks": false,
              "aot": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": false,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.dev.ts"
                }
              ]
            },
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "browserTarget": "gapminder-offline:build"
          },
          "configurations": {
            "dev": {
              "browserTarget": "gapminder-offline:build:dev"
            },
            "production": {
              "browserTarget": "gapminder-offline:build:production"
            }
          }
        },
        "test": {
          "builder": "@angular-builders/custom-webpack:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills-test.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "scripts": [],
            "styles": [
              "src/styles.scss"
            ],
            "assets": [
              "src/assets",
              "src/favicon.ico",
              "src/favicon.png",
              "src/favicon.icns",
              "src/favicon.256x256.png",
              "src/favicon.512x512.png"
            ],
            "customWebpackConfig": {
              "path": "./angular.webpack.js"
            }
          }
        }
      }
    },
    "gapminder-offline-e2e": {
      "root": "e2e",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "gapminder-offline:serve"
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  },
  "cli": {
    "analytics": false
  }
}
